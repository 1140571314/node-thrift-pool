{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "listEmittedFiles": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom",
      "es2018.promise"
    ],
    "outDir": "./dist/"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}